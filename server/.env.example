# Example SMTP and server env settings
# Copy this file to .env or set environment variables in your shell
# Gmail (recommended): create an App Password if your account has 2FA enabled
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM="ABC Church <your@gmail.com>"

# Optional: alternate SMTP example
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# SMTP_FROM=No-Reply <no-reply@example.com>

# Basic auth for API access (used by frontend)
ABC_USER=admin
ABC_PASS=secret

# Optional SMS gateway settings (example: Twilio)
# If you integrate SMS, implement server endpoints to call your provider
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
SMS_AUTH_TOKEN=your_auth_token
SMS_FROM=+1234567890

# Server port (optional)
PORT=3000
